# 交易管理组件配置参数

# 数据库配置
DATABASE_PATH=ledger/data/transactions.json
DATA_FORMAT=json  # 或 sqlite

# 默认设置
DEFAULT_CURRENCY=CNY
DEFAULT_TIMEZONE=Asia/Shanghai

# 数据备份
BACKUP_ENABLED=true
BACKUP_INTERVAL_DAYS=7
BACKUP_PATH=ledger/backups/

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=ledger/logs/ledger.log

# AI配置（OpenAI 兼容接口）
AI_MODEL_PATH=ledger/models/
AI_ENABLED=false # 改成true以启用AI功能
AI_AUTO_TAG=true
AI_AUTO_TAG_WITH_LLM=false
OPENAI_BASE_URL=
OPENAI_API_KEY=
OPENAI_MODEL=